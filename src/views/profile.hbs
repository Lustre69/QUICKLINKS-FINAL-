<!DOCTYPE html>
<html>
<head>
   <title>{{userName}} | Profile</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto|Rubik&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/profile.css">
</head>
<body>

{{> header}}

<div id="container">
    <div id="content">
        <h1 id="title">{{userName}}</h1> 
        <img src="{{avatar}}" alt="{{userName}}'s profile picture">
        <button id="edit-avatar-btn">Edit Profile Picture</button>
        <p id="bio">{{bio}}</p>
        <h2 id="link-title">Links:</h2>
        <ul id="links">
        {{#each links}}
            <li><a href="https://www.{{this}}">{{this}}</a></li>
        {{/each}}
        </ul>
    </div>
    <div id="buttons-container">
        <button id="settings-btn">Settings</button>
        <button id="back-btn">Back</button>
    </div>
</div>

<!-- The Modal -->
<div id="avatar-modal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <form id="avatar-form" enctype="multipart/form-data">
      <label for="avatar">Choose a file:</label>
      <input type="file" id="avatar" name="avatar">
      <input type="submit" value="Save">
    </form>
  </div>
</div>

<script>
// Get the modal
const modal = document.getElementById("avatar-modal");

// Get the button that opens the modal
const btn = document.getElementById("edit-avatar-btn");

// Get the <span> element that closes the modal
const span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal
btn.onclick = function() {
  modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

// Get the settings button
const settingsBtn = document.getElementById("settings-btn");

// When the user clicks the settings button, do something
settingsBtn.onclick = function() {
  // Add code here to show settings
}

// Get the back button
const backBtn = document.getElementById("back-btn");

// When the user clicks the back button, go back one page
backBtn.onclick = function() {
  window.history.back();
}
</script>

